# Forcer LF pour le code
*.js   text eol=lf
*.mjs  text eol=lf
*.cjs  text eol=lf
*.ts   text eol=lf
*.json text eol=lf
*.yml  text eol=lf
*.yaml text eol=lf
*.md   text eol=lf
*.css  text eol=lf
*.html text eol=lf
*.svg  text eol=lf
*.sh   text eol=lf

# Optionnel: garder CRLF pour scripts Windows
*.bat  text eol=crlf
*.cmd  text eol=crlf
*.ps1  text eol=crlf
